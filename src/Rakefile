desc "Display repositories"
task :list do
  REPOSITORIES.each do |repository|
    vcs, url, name = *repository
    next if vcs == 'svn'
    puts "#{url} # #{name}"
  end
end

REPOSITORIES.each do |repository|
  vcs, url, name = *repository
  next if vcs == 'svn'
  desc "ghq get #{url} # #{name}"
  task "ghq-#{name}" do
    sh "ghq get #{url}"
  end
end

task :default => :list
