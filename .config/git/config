[user]
	user = troter
	useConfigOnly = true
[init]
	defaultBranch = main
[push]
	default = simple
[branch]
	sort = -committerdate
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = LESS='MFRX' less
	autocrlf = false
	commentString = "##"
[diff]
	compactionHeuristic = true
[rebase]
	autostash = true
[rerere]
	enabled = true
	autoUpdate = true
[alias]
	amend = commit --amend
	br = branch
	current = branch --show-current
	cur = current
	ci = commit
	co = checkout
	df = diff
	di = diff
	fixup = commit --amend -C HEAD
	glog = log --pretty=format:\"%C(red)%h%Creset %C(cyan)<%an>%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset\" --abbrev-commit --date=relative --date-order --graph --all
	glogc = log --pretty=format:\"%C(red)%h%Creset %C(cyan)<%an>%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset\" --abbrev-commit --date=relative --date-order --graph
	lg = log -p
	st = status
	sw = switch
	up = pull --rebase --autostash
	wt = worktree
[url "https://"]
	insteadOf = git://
[ghq]
	root = ~/src
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft \"$LOCAL\" \"$REMOTE\"
[includeIf "gitdir:~/.git"]
	path = ~/.config/git/config.home
